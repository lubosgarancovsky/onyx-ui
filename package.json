{
  "name": "onyx-ui",
  "version": "0.0.1",
  "description": "React UI library",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "test": "jest",
    "build-styles-dev": "tailwindcss -i ./src/styles/index.css -o ./src/styles/onyx_theme.css --watch",
    "build-styles-prod": "tailwindcss -i ./src/styles/index.css -o ./src/styles/onyx_theme.css -m",
    "storybook": "storybook dev -p 6006",
    "dev": "concurrently \"npm run build-styles-dev\" \"npm run storybook\"",
    "svgr": "npx @svgr/cli --out-dir src/icons --icon --index-template svgr-index-template.js --replace-attr-values '#000=currentColor' -- src/assets/icons",
    "build-storybook": "storybook build",
    "type-check": "tsc --pretty --noEmit",
    "test-all": "npm run type-check && npm run test",
    "build": "rollup -c --bundleConfigAsCjs",
    "deploy": "npm run rollup && npm publish"
  },
  "author": "Ľuboš Garančovský",
  "license": "ISC",
  "dependencies": {
    "clsx": "^2.1.1",
    "framer-motion": "^11.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.2",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@storybook/addon-essentials": "^8.4.5",
    "@storybook/addon-interactions": "^8.4.5",
    "@storybook/addon-links": "^8.4.5",
    "@storybook/addon-onboarding": "^8.4.5",
    "@storybook/addon-webpack5-compiler-swc": "^1.0.5",
    "@storybook/blocks": "^8.4.5",
    "@storybook/react": "^8.4.5",
    "@storybook/react-webpack5": "^8.4.5",
    "@storybook/test": "^8.4.5",
    "@storybook/addons": "^7.6.17",
    "@storybook/api": "^7.6.17",
    "storybook-custom-theme-switcher": "^0.0.10",
    "@svgr/cli": "^8.1.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.45",
    "prettier": "^3.3.3",
    "rollup": "^4.27.4",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "storybook": "^8.4.5",
    "tailwindcss": "^3.4.10",
    "ts-jest": "^29.2.5",
    "tsconfig-paths-jest": "^0.0.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.5.4",
    "rollup-plugin-copy": "^3.5.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
